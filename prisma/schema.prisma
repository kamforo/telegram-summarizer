generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id                String    @id @default(cuid())
  name              String
  description       String?
  summarizationGoal String    @default("Summarize the main topics and key discussions")
  customPrompt      String?   // Custom prompt template for summarization
  // Schedule settings
  scheduleEnabled   Boolean   @default(false)
  scheduleCron      String?   // Cron expression, e.g., "0 9 * * 1" (Monday 9am)
  scheduleTimezone  String    @default("UTC")
  schedulePeriod    String    @default("daily") // daily, weekly, monthly
  lastScheduledRun  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  messages          Message[]
  summaries         Summary[]
  topics            Topic[]
  postSuggestions   PostSuggestion[]
  threads           Thread[]
  scheduleLogs      ScheduleLog[]
}

model Message {
  id         String   @id @default(cuid())
  groupId    String
  content    String
  senderName String?
  timestamp  DateTime
  createdAt  DateTime @default(now())
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([timestamp])
}

model Summary {
  id                  String   @id @default(cuid())
  groupId             String
  period              String   // daily, weekly, monthly, all
  startDate           DateTime
  endDate             DateTime
  content             String   // Executive summary text
  bulletPoints        String   // JSON array of bullet points
  followUpSuggestions String?  // JSON array of suggested follow-up questions
  messageCount        Int      @default(0)
  createdAt           DateTime @default(now())
  group               Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  topicMentions       TopicMention[]

  @@index([groupId])
  @@index([period])
  @@index([createdAt])
}

model Topic {
  id        String         @id @default(cuid())
  groupId   String
  name      String
  createdAt DateTime       @default(now())
  group     Group          @relation(fields: [groupId], references: [id], onDelete: Cascade)
  mentions  TopicMention[]

  @@unique([groupId, name])
  @@index([groupId])
}

model TopicMention {
  id        String   @id @default(cuid())
  topicId   String
  summaryId String
  frequency Int      @default(1)
  createdAt DateTime @default(now())
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  summary   Summary  @relation(fields: [summaryId], references: [id], onDelete: Cascade)

  @@unique([topicId, summaryId])
  @@index([topicId])
  @@index([summaryId])
}

model PostSuggestion {
  id        String   @id @default(cuid())
  groupId   String
  type      String   // "question" or "content"
  title     String
  content   String
  reasoning String?
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([type])
}

model Thread {
  id        String          @id @default(cuid())
  groupId   String
  title     String
  summary   String?
  startTime DateTime
  endTime   DateTime
  createdAt DateTime        @default(now())
  group     Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  messages  ThreadMessage[]

  @@index([groupId])
  @@index([startTime])
}

model ThreadMessage {
  id        String   @id @default(cuid())
  threadId  String
  messageId String
  position  Int      // Order within thread
  createdAt DateTime @default(now())
  thread    Thread   @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@unique([threadId, messageId])
  @@index([threadId])
}

model ScheduleLog {
  id        String   @id @default(cuid())
  groupId   String
  status    String   // "success", "error", "no_messages"
  message   String?
  summaryId String?
  createdAt DateTime @default(now())
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@index([groupId])
  @@index([createdAt])
}
